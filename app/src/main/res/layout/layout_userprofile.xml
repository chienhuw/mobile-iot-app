<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profilePhoto"
        android:layout_width="wrap_content"
        android:layout_height="211dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleUser"
        app:srcCompat="@drawable/profile_picture" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Goes to:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePhoto"
        tools:text="@string/user_profile_goesto" />

    <TextView
        android:id="@+id/activityPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Negley Martial Arts"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/profilePhoto" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:text="@string/user_profile_time" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="24dp"
        android:text="6 PM on  M,T,W,Th,F"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <View
        android:id="@+id/horizontal_line1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="70dp"
        android:background="#dfdfdf"
        app:layout_constraintTop_toBottomOf="@+id/profilePhoto"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/bio"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="I live at Shadyside and drop my son to Negley Martial Arts class during the weekdays. Message me if you think we could share our car together."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_line1" />

    <View
        android:id="@+id/horizontal_line2"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#dfdfdf"
        app:layout_constraintTop_toBottomOf="@+id/bio"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/horizontal_line2"
        tools:layout_editor_absoluteX="8dp"
        tools:text="@string/user_profile_common_connections" />

    <ImageView
        android:id="@+id/imageFriend1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:srcCompat="@drawable/dp1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Saurabh Misra"
        app:layout_constraintEnd_toEndOf="@+id/imageFriend1"
        app:layout_constraintStart_toStartOf="@+id/imageFriend1"
        app:layout_constraintTop_toBottomOf="@+id/imageFriend1" />

    <ImageView
        android:id="@+id/imageFriend2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@+id/imageFriend1"
        app:layout_constraintTop_toTopOf="@+id/imageFriend1"
        app:srcCompat="@drawable/dp2" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Lav Khanna"
        app:layout_constraintEnd_toEndOf="@+id/imageFriend2"
        app:layout_constraintStart_toStartOf="@+id/imageFriend2"
        app:layout_constraintTop_toBottomOf="@+id/imageFriend2" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="8dp"
        android:onClick="startChatScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePhoto" />

    <TextView
        android:id="@+id/titleUser"
        android:layout_width="386dp"
        android:layout_height="47dp"
        android:background="#FF9800"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

</android.support.constraint.ConstraintLayout>