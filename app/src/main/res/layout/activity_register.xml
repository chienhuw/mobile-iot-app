<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.google.firebase.codelab.friendlychat.Register">



    <TextView
        android:id="@+id/textView"
        android:layout_width="123dp"
        android:layout_height="20dp"
        android:layout_marginTop="36dp"
        android:text="Personal Info"
        android:textColor="#000000"
        android:textStyle="bold|italic" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="123dp"
        android:layout_height="20dp"
        android:text="Name"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:layout_below="@id/textView" />
    <EditText
        android:id="@+id/editText2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@id/textView1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="123dp"
        android:layout_height="20dp"
        android:text="Phone"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:layout_below="@id/editText2" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:text=""
        android:layout_below="@id/textView2"  />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="123dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:text="Pickup Address"
        android:textColor="#000000"
        android:layout_below="@id/editText3" />
    <TextView
        android:id="@+id/nametextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text=""
        android:layout_below="@id/textView3" />
    <TextView
        android:id="@+id/addtextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text=""
        android:layout_below="@+id/nametextView" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="select"
        android:id="@+id/pickerButton"
        android:layout_below="@id/editText3"
        android:layout_alignParentRight="true" />




    <TextView
        android:id="@+id/textView4"
        android:layout_width="123dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:text="Dropoff Address"
        android:textColor="#000000"
        android:layout_below="@id/addtextView" />
    <TextView
        android:id="@+id/nametextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text=""
        android:layout_below="@id/textView4" />
    <TextView
        android:id="@+id/addtextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text=""
        android:layout_below="@+id/nametextView2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="select"
        android:id="@+id/dropButton"
        android:layout_below="@id/addtextView"
        android:layout_alignParentRight="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Confirm"
        android:id="@+id/continueButton"
        android:onClick="createUser"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />


    <TextView
        android:id="@+id/untextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="" />

</RelativeLayout>

